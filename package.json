{
  "name": "atomik",
  "version": "1.0.0",
  "description": "A minimal, powerful, and atomic state management library for React with zero boilerplate.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/atomik.cjs.js",
  "module": "./dist/atomik.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/atomik.es.js",
      "require": "./dist/atomik.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^12.0.0",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-dts": "^1.7.1",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "atomik",
    "react",
    "state-management",
    "hook",
    "global-state",
    "store",
    "atomic",
    "minimal",
    "zustand",
    "jotai",
    "recoil"
  ],
  "author": "Your Name",
  "license": "MIT"
}